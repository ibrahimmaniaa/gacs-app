<Window x:Class="gacs_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GACS" Height="220" Width="380">
  <StackPanel Margin="12,0,162,0" VerticalAlignment="Center">
    <ComboBox ItemsSource="{Binding FirstOptions}" SelectedItem="{Binding SelectedFirst}" Margin="0,0,0,8"/>
    <ComboBox ItemsSource="{Binding SecondOptions}" SelectedItem="{Binding SelectedSecond}" Margin="0,0,0,8"/>
    <Button Content="Do Work" Command="{Binding DoWorkCommand}" Width="110" HorizontalAlignment="Left"/>
    <TextBlock Text="{Binding Status}" Margin="0,8,0,0"/>
  </StackPanel>
</Window>