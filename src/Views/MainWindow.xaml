<Window x:Class="GacsApp.ViewModels.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GACS" Height="600" Width="1600"
        ResizeMode="NoResize"
        Icon="/Assets/appicon.ico">
    <Grid Margin="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- First Group -->
        <GroupBox Header="Resource Sustainability &amp; Environmental Impact" Grid.Row="0" Grid.Column="0" Margin="8,0,8,8">
            <StackPanel Margin="8">
                <Label Content="Precursor Origin &amp; Renewability:" />
                <ComboBox ItemsSource="{Binding PrecursorOriginItems}" 
                         SelectedItem="{Binding SelectedPrecursorOriginItem}" 
                         Margin="0,0,0,8" />

                <Label Content="Solvent Greenness:" />
                <ComboBox ItemsSource="{Binding SolventGreennessItems}" 
                         SelectedItem="{Binding SelectedSolventGreennessItem}" 
                         Margin="0,0,0,8"/>

                <Label Content="Energy Input:" />
                <ComboBox ItemsSource="{Binding StatusCodes}" 
                          SelectedItem="{Binding SelectedStatusItem}" 
                          Margin="0,0,0,8"/>

                <Label Content="E-Factor &amp; Waste Generation:" />
                <ComboBox ItemsSource="{Binding StatusCodes}" 
                          SelectedItem="{Binding SelectedStatusItem}" 
                          Margin="0,0,0,8"/>
            </StackPanel>
        </GroupBox>

        <!-- Second Group -->
        <GroupBox Header="Second Group" Grid.Row="1" Grid.Column="0" Margin="8,0,8,8">
            <StackPanel Margin="8">
                <Label Content="First Option:" />
                <ComboBox ItemsSource="{Binding FirstOptions}" 
                         SelectedItem="{Binding SelectedFirst}" 
                         Margin="0,0,0,8" />

                <Label Content="Second Option:" />
                <ComboBox ItemsSource="{Binding SecondOptions}" 
                         SelectedItem="{Binding SelectedSecond}" 
                         Margin="0,0,0,8"/>
            </StackPanel>
        </GroupBox>

        <!-- Status and Button -->
        <TextBlock Text="{Binding Status}" 
                   Grid.Row="1" 
                   Grid.Column="2" 
                   Margin="295,218,10,-115"/>

        <Button Content="Do Work"
                Command="{Binding DoWorkCommand}"
                Width="272"
                HorizontalAlignment="Right"
                Grid.Row="1"
                Grid.Column="2"
                Margin="0,218,247,-115"/>
    </Grid>
</Window>
